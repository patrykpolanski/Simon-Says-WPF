        <TextBox x:Name="txtI" HorizontalAlignment="Left" Height="23" Margin="44,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="btnClose" Content="Zamknij" HorizontalAlignment="Left" Margin="44,0,0,34" VerticalAlignment="Bottom" Width="120" Click="Zamknij_Click" Height="20" Grid.Column="1"/>

    </Grid>
</Window>
